@{
    ViewData["Title"] = "Character Page";
}
<body>
    @foreach (var chr in Model)
    {
        <div class="character-container">
            <div onclick="location.href='/Character/CharInfo?id=@chr.Id'" class="char-name">
                <p> <span class="char-name-color">@chr.Name</span></p>
                <p class="char-name @(chr.NewlyAdded ? "newly-added-true" : "newly-added-false")">
                    @if (chr.NewlyAdded)
                    {
                        <i class="fas fa-check-circle"></i> <!-- Font Awesome check circle icon -->
                    }
                    else
                    {
                        <i class="fas fa-times-circle"></i> <!-- Font Awesome times circle icon -->
                    }
                </p>
            </div>  
        </div>
    }

    <div class="text-right" style="width: 80%; margin: 0 auto;">
       
        <a class="btn btn-primary" role="button" asp-controller="Character" asp-action="AddChar">
            Create Character
        </a>

        <a class="btn btn-primary" role="button" asp-controller="Fightstyle" asp-action="AddFightstyle">
            Create Fightstyle
        </a>
    </div>

