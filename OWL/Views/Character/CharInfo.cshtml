@model OWL.Core.Models.Character

@{
    ViewData["Title"] = "CharacterInfo";
}

<body>
    <div class="container">
        <div class="image">
            <img src="@Model.Image" alt="Character Image" class="bd-placeholder-img card-img-top img-small">
        </div>
        <div class="content">
            <h2> @Model.Name</h2>
            <h4> @Model.Description</h4>
            <h3>Fightstyle:</h3>
            <h4>@Model.FightStyle.Name</h4>
            <h3>Power:</h3>
            <h4>@Model.FightStyle.Power</h4>
            <h3>Speed:</h3>
            <h4>@Model.FightStyle.Speed</h4>
        </div>
    </div>

    <div class="flex">
        <div onclick="location.href='/Character/CharacterMoves?id=@Model.Id'" class="btn btn-primary cursor-pointer, padding: 20px">
            Movelist
        </div>

        <div onclick="location.href='/Character/EditChar?id=@Model.Id'" class="btn btn-primary cursor-pointer, padding: 20px">
            Edit Character
        </div>
        <div class="mr-2">
            @using (Html.BeginForm("DeleteCharacter", "Character", FormMethod.Post, new { @onsubmit = "return confirmDeletion(event, this);" }))
            {
                @Html.Hidden("id", Model.Id)
                <button id="delete-button-@Model.Id" class="btn btn-danger py-1 px-2 rounded-sm" type="submit">Delete Character</button>
            }
        </div>      
    </div>

</body>

<script>
    function confirmDeletion(event, form) {
        event.preventDefault();
        if (confirm("Are you sure you want to delete this character?")) {
            form.submit();
        }
    }
</script>



