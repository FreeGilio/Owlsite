@{
    ViewData["Title"] = "CharacterInfo";
}

<body>

    <div class="container">
        <div class="image">
            <img src="@Model.Image" alt="Character Image" class="bd-placeholder-img card-img-top">
        </div>
        <div class="content">
            <h2> @Model.Name</h2>
            <h4> @Model.Description</h4>
            <h3>Fightstyle:</h3>
            <h4>@Model.FightStyle.Name</h4>
            <h3>Power:</h3>
            <h4>@Model.FightStyle.Power</h4>
            <h3>Speed:</h3>
            <h4>@Model.FightStyle.Speed</h4>
        </div>
    </div>

</body>
