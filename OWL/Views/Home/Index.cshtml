@{
    ViewData["Title"] = "Home Page";
}

<body>
    <h1 class="display-4">Latest News</h1>

    @foreach (var nw in Model)
    {
        <div class="character-container">
            <div onclick="location.href='/News/NewsInfo?id=@nw.Id'" class="char-name">
                <p> <span class="news-name">@nw.Title</span></p>
                <p> <span class="news-subname">@nw.Category.Name</span></p>
                <p> <span class="news-subname">@nw.Date</span></p>
            </div>
        </div>
    }
</body>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
